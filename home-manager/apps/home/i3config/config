### Wallpapers/rocketbysun3uhd.jpg && sleep 1

mode "exit: [l]ock, log[o]ut, [r]eboot, [s]hutdown, sus[p]end, [h]ibernate" {

        bindsym o exec i3-msg exit
  
        bindsym l exec --no-startup-id $Locker, mode "default"
        bindsym p exec --no-startup-id $Locker && systemctl suspend, mode "default"
        bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
        bindsym r exec systemctl reboot
        bindsym s exec systemctl poweroff
        bindsym Escape mode "default"
        bindsym Return mode "default"

}

bindsym $mod+x mode "exit: [l]ock, log[o]ut, [r]eboot, [s]hutdown, sus[p]end, [h]ibernate"

########## keyboard layouts ##########

set $keyboard_layout Keyboard Layout: ( ) ALC (f) French, (e) US English, (b) Fr BEPO
mode "$keyboard_layout" {
        bindsym space exec --no-startup-id setxkbmap alc, mode "default"
        bindsym f exec --no-startup-id setxkbmap fr, mode "default"
        bindsym e exec --no-startup-id setxkbmap us, mode "default"
        bindsym b exec --no-startup-id setxkbmap fr -variant bepo, mode "default"
        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Escape mode "$keyboard_layout"

exec "setxkbmap -layout alc"


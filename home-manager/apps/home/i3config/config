mode "quick setup: [n]ormal, [c]ode, [b]lender, [a]rdour" {
  
        bindsym n exec --no-startup-id "i3-msg 'focus output DP-1-0; workspace 2; exec brave; focus output HDMI-1-0; workspace Music; exec freetube; workspace Chat; exec discord'", mode "default"
        bindsym c exec --no-startup-id "i3-msg 'focus output DP-1-0; workspace 2; exec brave; focus output HDMI-1-0; workspace Music; exec freetube; workspace Chat; exec discord; focus output eDP-1; workspace 10; exec code; focus output DP-1-0; workspace 9; exec terminator --working-directory=~/Documents/Code;'", mode "default"
        bindsym b exec --no-startup-id "i3-msg 'focus output DP-1-0; workspace 2; exec brave; focus output HDMI-1-0; workspace Music; exec freetube; workspace Chat; exec discord; focus output eDP-1; workspace 1; exec blender'", mode "default"
        bindsym a exec --no-startup-id "i3-msg 'focus output DP-1-0; workspace 2; exec brave; focus output HDMI-1-0; workspace Music; exec freetube; workspace Chat; exec discord; focus output eDP-1; workspace 1; exec ardour8'", mode "default"
        bindsym Escape mode "default"
        bindsym Return mode "default"

}

bindsym $mod+Shift+Return mode "quick setup: [n]ormal, [c]ode, [b]lender, [a]rdour"
